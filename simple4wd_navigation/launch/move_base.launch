<launch>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find simple4wd_navigation)/config/costmap_common.yaml" command="load" ns="global_costmap" /> 
    <rosparam file="$(find simple4wd_navigation)/config/costmap_common.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find simple4wd_navigation)/config/costmap_local.yaml" command="load" />
    <rosparam file="$(find simple4wd_navigation)/config/costmap_global.yaml" command="load" /> 
    <rosparam file="$(find simple4wd_navigation)/config/base_local_planner.yaml" command="load" />
    
    <remap from="cmd_vel" to="/simple4wd/mobile_base_controller/cmd_vel"/>
  </node>

</launch> 